<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/courses_history_page.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <title>Courses History</title>
</head>
<body>
    <header>
        <nav>
            <div class="links">
                <span class = "icon">
                    <span></span>
                    <span></span>
                    <span></span>
                </span>
                <ul>
                    <li>
                        <img src="/name_icon.PNG" alt="name_icon.PNG">
                        <a href = "/my_profile_page"><%=stu_name%></a>
                    </li>
                    <li>
                        <img src="/profile_icon.png" alt="profile_icon.png">
                        <a href = "/my_profile_page">My Profile</a>
                    </li>
                    <li>
                        <img src="/register_icon.png" alt="register_icon.png">
                        <a href="/register_page">Register</a>
                    </li>
                    <li class = "current">
                        <img src="/courses_history_icon.png" alt="courses_history_icon.png">
                        <a href="/courses_history_page">Courses History</a>
                    </li>
                    <li>
                        <img src="/logout.png" alt="courses_history_icon.png">
                        <a href = "/student_login">Log Out</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <main>
        <header>
            <h3>Courses History</h3>
        </header>
        <section>
            <h3>Search</h3>
            <div>
                <form action = "courses_history_page" method = "post">
                    <label for="">Term: </label>
                    <select name = "term" id="">
                        <option value="" selected>Select Term</option>
                        <option value = "222">Term 222</option>
                        <option value = "221">Term 221</option>
                        <option value = "213">Term 213</option>
                    </select>
                    <div class = "but">
                        <button type = "submit">Search</button>
                    </div>
                </form>
            </div>

            <div>
                <table>
                    <thead>
                        <tr>
                            <th>Course</th>
                            <th>CRN</th>
                            <th>Day</th>
                            <th>Time</th>
                            <th>Loc</th>
                            <th>Instructor</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (courses !== null) {%>
                        <%courses.forEach(course => {%>
                        <tr>
                            <td><%=course.c_abbr%>-<%=course.sec%>-<%=course.type%></td>
                            <td><%=course.crn%></td>
                            <td><%=course.days%> </td>
                            <td><%=course.time%></td>
                            <td><%=course.build%>-<%=course.room%></td>
                            <td><%=course.inst%> </td>
                        </tr>
                        <%});%>
                        <%}%>
                    </tbody>
                </table>
            </div>
        </section>
    </main>
</body>
</html>